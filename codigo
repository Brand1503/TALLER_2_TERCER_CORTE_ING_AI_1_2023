int punto1(void)
{
    float a;
    float b; 
    float solucion; 
    float pi = 3.141592; 

    printf("Hola Necesitas hallar el volumen de un cono, por favor ingresa los siguientes datos:\n");
    printf("Ingrese el valor del radio: \n");
    scanf("%f", &a);
    printf("Ingrese el valor de la altura: \n");
    scanf("%f", &b);
    solucion = pi*a*a*b/3;
    printf("El volumen del cono es de %f",solucion);
    return 0; 
}
